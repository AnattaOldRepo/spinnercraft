<div class="c-marketingGive__content">
    <h2 class="c-marketingGive__title">{{ section.settings.marketing_giveaway_title }}</h2>
    <form class="c-marketingSignUp__form">
        <div class="c-marketing__input">
            {% form 'customer' %}
              {{ form.errors | default_errors }}
              {% if form.posted_successfully? %}
                <p class="u-bold u-black">{{ 'general.newsletter_form.confirmation' | t }}</p>
              {% else %}
                <div class="c-marketing__inputContent">
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <input type="email"
                    name="contact[email]"
                    id="Email"
                    class="c-marketing__inputItem"
                    value="{% if customer %}{{ customer.email }}{% endif %}"
                    placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
                    autocorrect="off"
                    autocapitalize="off">
                    <button type="submit" class="c-btn c-btn--black" name="commit" id="Subscribe">
                      Sign Up
                    </button>
                </div>
              {% endif %}
            {% endform %}
        </div>
    </form>
    <h4 class="c-marketingSignUp__tag">{{ section.settings.marketing_giveaway_tag }}</h4>
</div>
<div class="c-marketingGive__media">
    <img src=" {{ section.settings.marketing_giveaway_img | img_url: 'master'}}" />
</div>


{% schema %}
  {
    "name": "Marketing Give Away",
    "settings": [
        {
            "content": "Give Away",
            "type": "paragraph"
        },
        {
            "id": "marketing_giveaway_title",
            "label": "Title",
            "type": "text"
        },
        {
            "id": "marketing_giveaway_tag",
            "label": "Tag",
            "type": "text"
        },
        { 
            "id" : "marketing_giveaway_img",
            "label" : "Image",
            "type"  : "image_picker"
        }
    ]
  }
 {% endschema %}