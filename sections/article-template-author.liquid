<div class="c-blogAuthor">
    <div class="c-blogAuthor__skew u-hideMobile">
    </div>
    <div class="o-wrapper--author">
        <div class="c-blogAuthor__container">
            <div class="c-blogAuthor__head o-grid">
                <div class="c-blogAuthor__headMedia o-grid__4-12">
                    <div class="c-blogAuthor__headSkew u-hideDesktop">
                    </div>
                    <h1 class="c-blogAuthorTitle u-hideDesktop">{{ article.title }}</h1>
                    <div class="c-blogAuthor__headMediaChild">
                        <img src="{{ article.image.src | img_url: 'large' }}">
                            {% if section.settings.show_share_buttons %}
                                {% include 'social-sharing-author', share_title: article.title, share_permalink: article.url, share_image: article.image %}
                            {% endif %}
                    </div>
                </div>
                <div class="c-blogAuthor__headTitle o-grid__4-12">
                    <h1 class="c-blogAuthorTitle u-hideMobile">{{ article.title }}</h1>
                    {% for tag in article.tags %}
                        <h4 class="c-blogAuthor__headTags u-fontAzo"><span class="c-blogAuthor__headTags--color">{{ tag }}</span></h4>
                    {% endfor %}
                </div>
                <div class="c-blogAuthor__headContent c-dc o-grid__4-12">
                    {{ article.content }}
                </div>
            </div>

