<div class="c-blogAuthor">
    <div class="c-blogAuthor__skew u-hideMobile">
    </div>
    <div class="o-wrapper--author">
        <div class="c-blogAuthor__container">
            <div class="c-blogAuthor__head o-grid">
                <div class="c-blogAuthor__headMedia o-grid__4-12">
                    <div class="c-blogAuthor__headSkew u-hideDesktop">
                    </div>
                    <h1 class="c-blogAuthorTitle u-hideDesktop">{{ article.title }}</h1>
                    <div class="c-blogAuthor__headMediaChild">
                        <img src="{{ article.image.src | img_url: 'large' }}">
                            {% include 'social-sharing-author' %}
                            
                    </div>
                </div>
                <div class="c-blogAuthor__headTitle o-grid__4-12">
                    <h1 class="c-blogAuthorTitle u-hideMobile">{{ article.title }}</h1>
                    {% for tag in article.tags %}
                        <h4 class="c-blogAuthor__headTags u-fontAzo"><span class="c-blogAuthor__headTags--color">{{ tag }}</span></h4>
                    {% endfor %}
                </div>
                <div class="c-blogAuthor__headContent c-dc o-grid__4-12">
                    {{ article.content }}
                </div>
            </div>
        
        <div class="c-blogAuthor__recomend">
            <div class="c-blogAuthor__recomendSkew">

            </div>
            <h3 class="c-blogAuthor__subTitle">
                <span class="c-blogAuthor__subTitle--icon"> 
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 490 490" style="enable-background:new 0 0 490 490;" xml:space="preserve" width="512px" height="512px">
                    <g>
                    <path d="M52.8,311.3c-12.8-12.8-12.8-33.4,0-46.2c6.4-6.4,14.7-9.6,23.1-9.6s16.7,3.2,23.1,9.6l113.4,113.4V32.7   c0-18,14.6-32.7,32.7-32.7c18,0,32.7,14.6,32.7,32.7v345.8L391,265.1c12.8-12.8,33.4-12.8,46.2,0c12.8,12.8,12.8,33.4,0,46.2   L268.1,480.4c-6.1,6.1-14.4,9.6-23.1,9.6c-8.7,0-17-3.4-23.1-9.6L52.8,311.3z" fill="#fda408"/>
                    </g>
                    </svg>
                </span>

            Recommended fidget spinners </h3>

    
            
            <div class="c-blogAuthor__recomendSpinner js-blogSlider u-textCenter">

                  
                    {% assign currentTitle = article.title %}
                
                        {% for product in collections.fidget-spinner-full-collection.products %}

                            {% if product.tags contains currentTitle %}
                                <div class="c-blogAuthor__recomendBlock">
                                    <a href="{{ product.url }}">
                                        <img src="{{ product.handle | append: '.png' | asset_url }}" alt="{{ product.title }}" onError="style.display = 'none';" />

                                        <h3 class="c-blogAuthor__subTitle c-blogAuthor__subTitle--slider">{{ product.title }}</h3>
                                    </a>
                                </div> 
                        {% endif %} 

                    {% endfor %}

             
            </div> 
        </div>

        <div class="c-blogAuthor__myTricks">
            <h3 class="c-blogAuthor__subTitle">
                <span class="c-blogAuthor__subTitle--icon"> 
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 490 490" style="enable-background:new 0 0 490 490;" xml:space="preserve" width="512px" height="512px">
                    <g>
                    <path d="M52.8,311.3c-12.8-12.8-12.8-33.4,0-46.2c6.4-6.4,14.7-9.6,23.1-9.6s16.7,3.2,23.1,9.6l113.4,113.4V32.7   c0-18,14.6-32.7,32.7-32.7c18,0,32.7,14.6,32.7,32.7v345.8L391,265.1c12.8-12.8,33.4-12.8,46.2,0c12.8,12.8,12.8,33.4,0,46.2   L268.1,480.4c-6.1,6.1-14.4,9.6-23.1,9.6c-8.7,0-17-3.4-23.1-9.6L52.8,311.3z" fill="#fda408"/>
                    </g>
                    </svg>
                </span>
            My tricks </h3>
            <div class="o-grid">
               
                <div class="o-grid__4-12 c-blogAuthor__myTricksBlock">
                    <a href="{{ article.metafields.video.link1 }}" target="_blank">
                        <img src="{{ article.metafields.video.img1 }}">
                    </a>
                    <a href="{{ article.metafields.trick.link1 }}">
                        <h3 class="c-blogAuthor__subTitle c-blogAuthor__subTitle--video">{{ article.metafields.video.title1 }}</h3>
                    </a>
                </div>
             
           
                 <div class="o-grid__4-12 c-blogAuthor__myTricksBlock">
                    <a href="{{ article.metafields.video.link2 }}" target="_blank">
                        <img src="{{ article.metafields.video.img2 }}">
                    </a>
                    <a href="{{ article.metafields.trick.link1 }}">
                        <h3 class="c-blogAuthor__subTitle c-blogAuthor__subTitle--video">{{ article.metafields.video.title2 }}</h3>
                    </a>
                </div>
        
               
                 <div class="o-grid__4-12 c-blogAuthor__myTricksBlock">
                    <a href="{{ article.metafields.video.link3 }}" target="_blank">
                        <img src="{{ article.metafields.video.img3 }}">
                    </a>
                    <a href="{{ article.metafields.trick.link1 }}">
                        <h3 class="c-blogAuthor__subTitle c-blogAuthor__subTitle--video">{{ article.metafields.video.title3 }}</h3>
                    </a>
                </div>
              
            </div>
        </div>
    </div>
</div>


{% schema %}
  {
    "name": "Posts",
    "settings": [
      {
        "type": "checkbox",
        "id": "blog_show_author",
        "label": "Show author",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "blog_show_date",
        "label": "Show date",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      }
    ]
  }
{% endschema %}
