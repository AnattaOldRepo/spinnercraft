{% if section.blocks.size > 0 %}
  <div class="text-center">
    {% for block in section.blocks %}
      <h3>{{ block.settings.heading }}</h3>
      <p>{{ block.settings.handle }}</p>
    {% endfor %}
    <div class="instagram__feeds" id="insta-feed"></div>
    {% for block in section.blocks %}
      <a href="{{ block.settings.link | escape }}" class="btn">Follow</a>
    {% endfor %}
  </div>
{% endif %}

{% schema %}
  {
    "name": "instagram",
    "class": "index-section instagram",
    "blocks": [
      {
        "type": "heading",
        "name": "heading",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "heading"
          },
          {
            "type": "text",
            "id": "handle",
            "label": "handle"
          },
          {
            "type": "url",
            "id": "link",
            "label": "insta link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "instagram",
        "category": "Text",
        "blocks": [
          {
            "type": "heading"
          }
        ]
      }
    ]
  }
{% endschema %}
