{% if section.settings.message %}
<meta name="p:domain_verify" content="2e82d7387e314feda76c557473cead57"/>
<script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<script>
  (adsbygoogle = window.adsbygoogle || []).push({
    google_ad_client: "ca-pub-5029502125856165",
    enable_page_level_ads: true
  });
</script>
{% endif %}

<div data-section-id="{{ section.id }}" data-section-type="header-section">
  
  <div class="c-helloBar">
    <div class="o-wrapper u-flex u-heightfull u-flexCenter">
      <ul class="c-helloBarNav u-flexGrow_1 u-hideMobile">
        {% for link in linklists.top-bar-menu.links %}
          <li class="c-helloBarNav__item u-cream u-font_14 u-inline">
            <a class="c-helloBarNav__link u-cream" href="{{ link.url }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
      {% if section.settings.message %}
          {% if section.settings.message %}
            {% if section.settings.message_link != blank %}
              <a href="{{ section.settings.message_link }}" class="notification-bar__message">
                {{ section.settings.message_text | escape }}
              </a>
            {% else %}
              <p class="c-helloBar__title u-cream u-font_14 ">{{ section.settings.message_text | escape }}</p>
            {% endif %}
          {% endif %}
        {% endif %}
    </div>
  </div>
  
  <div class="c-header u-rel">
    <div class="o-grid u-flexCenter u-heightfull">
        <div class="c-header__left u-flexGrow_1 ">
            <div class="c-logo u-flexCenterTab">
              <a class="u-hideDesktop" href="/">
                {% include 'icon-new-logo-mobile' %}
              </a>
              <a class="u-hideMobile" href="/">
                {% include 'icon-new-logo' %}
              </a>
            </div>
        </div>
        <div class="c-header__center u-flexGrow_1">
          <div class="c-hamMenu u-rel u-hideDesktop">
            <span class="c-hamMenu__tile"></span>
          </div>
          <div class="c-headerNav">
            <div class="c-headerNav__close u-textRight u-hideDesktop">
                {% include 'icon-new-close' %}
            </div>
            <ul class="c-headerNav__list">
              {% for link in linklists.new-main-menu.links %}
              {% assign child_list_handle = link.title | handle %}
              {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
              <li class="c-headerNav__item has-dropdown u-bold u-rel">
                <a class="c-headerNav__link" href="{{ link.url }}">{{ link.title }}</a>
                <ul class="c-headerSubMenu u-textLeft">
                  {% for child_link in linklists[child_list_handle].links %}
                  <li class="c-headerSubMenu__item u-regular">
                    <a class="u-black" href="{{ child_link.url }}">{{ child_link.title }}</a>
                  </li>
                  {% endfor %}        
                </ul>
              </li>
              {% else %}
              <li {% if link.title == "All Spinners" %} 
                class="c-headerNav__border c-headerNav__item u-bold u-rel"
                {% endif %} 
                class="c-headerNav__item u-bold u-rel">
                <a class="c-headerNav__link" href="{{ link.url }}">{{ link.title }}</a>
              </li>
              {% endif %}
              {% endfor %}
            </ul>
            <div class="c-headerNav__external u-hideDesktop">
              <ul>
                <li class="c-headerNav__externalItem">
                    {% if shop.customer_accounts_enabled %}
                      {% if customer %}
                        <a class="c-headerNav__externalLink" href="/account">
                          {{ 'layout.customer.account' | t }}
                        </a>
                      {% else %}
                        <a class="c-headerNav__externalLink" href="/account/login">
                          Login
                        </a>
                      {% endif %}
                    {% endif %}
                </li>
                {% for link in linklists.top-bar-menu.links %}
                  <li class="c-headerNav__externalItem">
                    <a class="c-headerNav__externalLink" href="{{ link.url }}">{{ link.title }}</a>
                  </li>
                {% endfor %}

              </ul>

            </div>
          </div>
        </div>
        <div class="c-header__right u-flex u-flexGrow_1 u-textCenter">
            <div class="c-header__search u-flexGrow_1 u-pt_10 js-Search u-rel">
              <span class="c-header__search--icon">
                {% include 'icon-search' %}
              </span>
                <div class="c-search js-searchBar">
                  <form class="" action="/search" method="get" role="search">
                    <button class="" type="submit">
                      {% include 'icon-search' %}
                    </button>
                    <input class="" type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" aria-label="{{ 'general.search.placeholder' | t }}">
                  </form>
                </div>
            </div>
            <div class="c-header__user u-flexGrow_1 u-pt_10">
              {% if shop.customer_accounts_enabled %}
                {% if customer %}
                  <a href="/account">
                    {{ 'layout.customer.account' | t }}
                  </a>
                {% else %}
                  <a href="/account/login" class="site-header__account">
                    {% include 'icon-new-user' %}
                  </a>
                {% endif %}
              {% endif %}
            </div>
            <div class="c-header__cart u-flexGrow_1">
               <a class="js-drawer-open-right" aria-controls="CartDrawer" aria-expanded="false">
                  {% include 'icon-new-cart' %}
                  {% if cart.item_count > 0 %}
                    <span class="c-header__cart__count u-bold u-floatLeft">
                      <span id="CartCount">{{ cart.item_count }}</span>
                    </span>
                  {% endif %}
                </a>
            </div>
        </div>
      </div>
  </div>
  <nav class="mobile-nav-wrapper medium-up--hide" role="navigation" style="display: none;">
    <ul id="MobileNav" class="mobile-nav">
      {% for link in linklists[section.settings.main_linklist].links %}
        {%- assign child_list_handle = link.title | handleize -%}

        <li class="mobile-nav__item{% unless forloop.last %} border-bottom{% endunless %}">
          {% if linklists[child_list_handle].links != blank %}
            <button type="button" class="btn--link js-toggle-submenu mobile-nav__link" data-target="{{ child_list_handle }}" data-level="1">
              {{ link.title }}
              <div class="mobile-nav__icon">
                {% include 'icon-chevron-right' %}
              </div>
            </button>
            <ul class="mobile-nav__dropdown" data-parent="{{ child_list_handle }}" data-level="2">
              <li class="mobile-nav__item border-bottom">
                <div class="mobile-nav__table">
                  <div class="mobile-nav__table-cell mobile-nav__return">
                    <button class="btn--link js-toggle-submenu mobile-nav__return-btn" type="button">
                      {% include 'icon-chevron-left' %}
                      <span class="icon__fallback-text">{{ 'layout.navigation.collapse' | t }}</span>
                    </button>
                  </div>
                  <a href="{{ link.url }}" class="mobile-nav__sublist-link mobile-nav__sublist-header">
                    {{ link.title }}
                  </a>
                </div>
              </li>

              {% for childlink in linklists[child_list_handle].links %}
                <li class="mobile-nav__item{% unless forloop.last %} border-bottom{% endunless %}">
                  <a href="{{ childlink.url }}" class="mobile-nav__sublist-link">
                    {{ childlink.title | escape }}
                  </a>
                </li>
              {% endfor %}

            </ul>
          {% else %}
            <a href="{{ link.url }}" class="mobile-nav__link">
              {{ link.title }}
            </a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>

  <header class="site-header{% if section.settings.align_logo == 'left' %} border-bottom logo--left{% else %} logo--center{% endif %}" role="banner">

    <div class="site-header__row" style="display: none;">
      <div class="grid grid--no-gutters grid--table">
        <div class="grid__item small-up--one-third">
          {% unless linklists[section.settings.main_linklist] == blank %}
            <button type="button" class="btn--link site-header__menu js-mobile-nav-toggle mobile-nav--open">
              {% include 'icon-hamburger' %}
              {% include 'icon-close' %}
            </button>
          {% endunless %}
          {% if section.settings.message %}
            <div class="notification-bar">
              {% if section.settings.message %}
                {% if section.settings.message_link != blank %}
                  <a href="{{ section.settings.message_link }}" class="notification-bar__message">
                    {{ section.settings.message_text | escape }}
                  </a>
                {% else %}
                  <span class="notification-bar__message">{{ section.settings.message_text | escape }}</span>
                {% endif %}
              {% endif %}
            </div>
          {% endif %}
        </div>

        <div class="grid__item small-up--one-third grid__item--logo text-center">
          <div>
            {% comment %}
              Use the uploaded logo from theme settings if enabled.
              Site name gets precedence with H1 tag on homepage, div on other pages.
            {% endcomment %}
            {% if template == 'index' %}
              <h1 class="h2 site-header__logo" itemscope itemtype="http://schema.org/Organization">
            {% else %}
              <div class="h2 site-header__logo" itemscope itemtype="http://schema.org/Organization">
            {% endif %}
              {% if section.settings.logo %}
                <a href="/" itemprop="url" class="site-header__logo-image">
                  {% capture image_size %}{{ section.settings.logo_max_width }}x{% endcapture %}
                  <img src="{{ section.settings.logo | img_url: image_size }}"
                       srcset="{{ section.settings.logo | img_url: image_size }} 1x, {{ section.settings.logo | img_url: image_size, scale: 2 }} 2x"
                       alt="{{ section.settings.logo.alt | default: shop.name }}"
                       itemprop="logo">
                </a>
              {% else %}
                <a class="site-header__logo-link" href="/" itemprop="url">{{ shop.name }}</a>
              {% endif %}
            {% if template == 'index' %}
              </h1>
            {% else %}
              </div>
            {% endif %}
          </div>
        </div>

        <div class="grid__item small-up--one-third text-right">
          <button type="button" class="btn--link site-header__search-toggle js-drawer-open-top">
            <span class="icon__fallback-text">{{ 'layout.navigation.search' | t }}</span>
          </button>

          {% if shop.customer_accounts_enabled %}
            {% if customer %}
              <a href="/account" class="site-header__account">
                <span class="icon__fallback-text">{{ 'layout.customer.account' | t }}</span>
              </a>
            {% else %}
              <a href="/account/login" class="site-header__account">
                <span class="icon__fallback-text">Login</span>
              </a>
            {% endif %}
          {% endif %}

          <a class="site-header__cart js-drawer-open-right" aria-controls="CartDrawer" aria-expanded="false">
            {% include 'icon-cart' %}
            <span class="visually-hidden">{{ 'layout.cart.title' | t }}</span>
            {% if cart.item_count > 0 %}
              <div class="site-header__cart-count">
                <span id="CartCount">{{ cart.item_count }}</span>
              </div>
            {% endif %}
          </a>
        </div>
      </div>
    </div>

    <div class="site-header__row site-header__row--nobg site-header__row--largeVisible" style="display: none;">
      <div class="grid grid--no-gutters grid--table">
        {% if section.settings.align_logo == 'center' %}
          <div class="grid__item small--hide medium-up--one-quarter">
            <div class="site-header__search">
              {% include 'search-form' %}
            </div>
          </div>
        {% endif %}

        {% if section.settings.align_logo == 'left' %}
          <nav class="grid__item small--hide" id="AccessibleNav" role="navigation">
            {% include 'site-nav' %}
          </nav>
        {% endif %}
      </div>
    </div>

    <div class="site-header__row site-header__row--nobg site-header__row--smallVisible" style="display: none;">
      {% if section.settings.message %}
        <div class="notification-bar notification-bar--smallVisible text-site-header__cart-count text-center">
          {% if section.settings.message %}
            {% if section.settings.message_link != blank %}
              <a href="{{ section.settings.message_link }}" class="notification-bar__message">
                {{ section.settings.message_text | escape }}
              </a>
            {% else %}
              <span class="notification-bar__message">{{ section.settings.message_text | escape }}</span>
            {% endif %}
          {% endif %}
        </div>
      {% endif %}
    </div>

  </header>

  {% if section.settings.align_logo == 'center' %}
  <nav class="small--hide border-bottom" id="AccessibleNav" role="navigation">
    {% include 'site-nav', nav_alignment: 'site-nav--centered' %}
  </nav>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "radio",
        "id": "align_logo",
        "label": "Logo alignment",
        "default": "left",
        "options": [
          {"value": "left", "label": "Left"},
          {"value": "center", "label": "Centered"}
        ]
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": "Custom logo width (in pixels)",
        "default": "100"
      },
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Menu",
        "default": "main-menu"
      },
      {
        "type": "checkbox",
        "id": "message",
        "label": "Show announcement",
        "default": false
      },
      {
        "type": "text",
        "id": "message_text",
        "label": "Announcement text",
        "default": "Announce something here"
      },
      {
        "type": "url",
        "id": "message_link",
        "label": "Announcement link",
        "info": "Optional"
      },
      {
        "type": "color",
        "id": "color_bg",
        "label": "Announcement color",
        "default": "#7796A8"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Announcement text color",
        "default": "#fff"
      }
    ]
  }
{% endschema %}
